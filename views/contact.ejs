<div class="container">
    <div class="row">
        <div class="col-md-8 mt-4">
            <h2>Daftar Contact</h2>

              <a href="/contact/add " class="btn btn-primary mb-2">Tambah Data Contact</a>


              <% if (msg.length !==0) { %>
                <div class="alert alert-success fw-bold" role="alert"><%= msg %>
                </div>
              <% } %>
  

            <table class="table mt-4">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>

                   <tr>
                    <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">Data contact Masih Kososng !
                        </div>
                    </td>
                   </tr>

                    <% } %>
                    <% contacts.forEach((contact, i)=> { %>
                        <tr>
                          <th scope="row"><%= i+1 %></th>
                          <td><%= contact.nama %></td>
                          <td><%= contact.noHP %></td>
                          <td>
                              <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"> Detail <i class="bi bi-info-circle"></i></a>
                          </td>
                        </tr>
                        
                    <% }) %>
               
                </tbody>
              </table>     
        </div>
    </div>
</div>